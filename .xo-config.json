{
  "envs": ["es2020", "browser"],
  "space": true,
  "prettier": true,
  "extends": [
    "plugin:jest/recommended",
    "plugin:jest/style",
    "plugin:jest-dom/recommended",
    "plugin:testing-library/recommended"
  ],
  "overrides": [
    {
      "files": "src/**/*.js",
      "nodeVersion": ">=14"
    },
    {
      "files": "*.config.js",
      "rules": {
        "import/no-anonymous-default-export": "off"
      }
    }
  ]
}
